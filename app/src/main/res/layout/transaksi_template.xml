<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="12dp"
    android:clickable="true"
    android:id="@+id/relative">

    <TextView
        android:id="@+id/namaPelangganList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:fontFamily="@font/ofsemibold"
        android:layout_marginStart="10dp"
        android:textColor="@color/text"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/tglList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00 15-05-2023"
        android:fontFamily="@font/ofregular"
        android:layout_marginStart="10dp"
        android:layout_below="@id/namaPelangganList"
        android:textColor="@color/text"/>
    <TextView
        android:id="@+id/statusList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:text="Belum Dibayar"
        android:fontFamily="@font/ofsemibold"
        android:textColor="@color/text"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/mejaList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:text="Meja 13"
        android:fontFamily="@font/ofmedium"
        android:layout_below="@id/statusList"
        android:textColor="@color/text"/>

</RelativeLayout>