<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="4dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/namaItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:fontFamily="@font/ofmedium"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/hargaItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp9999999"
            android:fontFamily="@font/ofregular"
            android:textColor="@color/text"
            android:textSize="14sp"
            android:maxLines="1"
            android:layout_below="@id/namaItem"/>
        <ImageButton
            android:id="@+id/buttonSubstract"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/txtJumlah"
            android:background="@drawable/min"/>
        <TextView
            android:id="@+id/txtJumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/buttonAdd"
            android:text="0"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/ofsemibold"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textColor="@color/text"/>
        <ImageButton
            android:id="@+id/buttonAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="6.5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/add"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>