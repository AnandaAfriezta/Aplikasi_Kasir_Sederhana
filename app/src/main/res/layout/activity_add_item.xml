<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ananda.casheer.view.add.AddItemActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/PrimaryColor">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Menu"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/ofmedium"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/namaProduk"
            android:background="@drawable/bg_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:fontFamily="@font/ofregular"
            android:hint="Nama produk..."
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/hargaProduk"
            android:background="@drawable/bg_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:fontFamily="@font/ofregular"
            android:hint="Harga produk..."
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:inputType="number"/>
        <Spinner
            android:id="@+id/pilihTipe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edittext"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:entries="@array/tipe" />

        <Button
            android:background="@drawable/bg_button"
            android:id="@+id/simpan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="center"
            android:hint="Simpan"
            android:fontFamily="@font/ofmedium"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</LinearLayout>