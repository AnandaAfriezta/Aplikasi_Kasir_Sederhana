<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ananda.casheer.view.edit.EditItemActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/PrimaryColor">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Menu"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/ofmedium"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/namaProduk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nama produk..."
        android:paddingStart="10dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:fontFamily="@font/ofregular"
        android:background="@drawable/bg_edittext"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/hargaProduk"
        android:background="@drawable/bg_edittext"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:layout_height="50dp"
        android:hint="Harga produk..."
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:inputType="number"/>
    <Spinner
        android:id="@+id/pilihTipe"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"

        android:entries="@array/tipe" />

    <Button
        android:id="@+id/simpan"
        android:background="@drawable/bg_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        android:text="simpan"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"/>

</LinearLayout>